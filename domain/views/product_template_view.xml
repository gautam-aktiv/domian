<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_domain" model="ir.ui.view">
        <field name="name">product.template.form.inherit.domain</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_category_hierarchy_wizard"
                        type="object"  class="oe_highlight"
                        string="Show Category Hierarchy"/>
            </xpath>
        </field>
    </record>
</odoo>
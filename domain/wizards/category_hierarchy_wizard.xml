<odoo>
    <record id="view_category_hierarchy_wizard_form" model="ir.ui.view">
        <field name="name">category.hierarchy.wizard.form</field>
        <field name="model">category.hierarchy.wizard</field>
        <field name="arch" type="xml">
            <form string="Category Hierarchy">
                <group>
                    <field name="product_id" readonly="1"/>
                    <field name="parent_categories" widget="many2many_tags" readonly="1"/>
                    <field name="child_categories" widget="many2many_tags" readonly="1"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_report" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_category_hierarchy_wizard" model="ir.actions.act_window">
        <field name="name">Category Hierarchy Wizard</field>
        <field name="res_model">category.hierarchy.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
